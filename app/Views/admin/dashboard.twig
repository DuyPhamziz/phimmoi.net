{% extends 'admin/layouts/basead.twig' %}

{% block title %} {{ page_title}} {% endblock %}

{% block content %}
<div class="container py-4 px-3 px-lg-5">
    <h1 class="mb-4">🎬 Bảng điều khiển</h1>

    <!-- Thống kê -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card bg-dark text-white card-hover">
                <div class="card-body">
                    <h5 class="card-title">🎞 Tổng số phim</h5>
                    <p class="card-text fs-3">{{ countMovie }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-white card-hover">
                <div class="card-body">
                    <h5 class="card-title">📂 Thể loại</h5>
                    <p class="card-text fs-3">{{ countCategory }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white card-hover">
                <div class="card-body">
                    <h5 class="card-title">📍 Quốc gia</h5>
                    <p class="card-text fs-3">{{ countCountry }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white card-hover">
                <div class="card-body">
                    <h5 class="card-title">🎬 Số tập</h5>
                    <p class="card-text fs-3">{{ countEpisode }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark card-hover">
                <div class="card-body">
                    <h5 class="card-title">👥 Người dùng</h5>
                    <p class="card-text fs-3">{{ countUser }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white card-hover">
                <div class="card-body">
                    <h5 class="card-title">💬 Bình luận</h5>
                    <p class="card-text fs-3">{{ countComment }}</p>
                </div>
            </div>
        </div>
    </div>


<style>
    .card-hover {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .card-hover:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }
</style>
{% endblock %}