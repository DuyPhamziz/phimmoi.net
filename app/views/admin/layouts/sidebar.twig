<div class="d-flex">
	<nav class="sidebar collapsed d-flex flex-column flex-shrink-0 position-fixed">
		<button class="toggle-btn bg-danger" onclick="toggleSidebar()">
			<i class="fas fa-chevron-left text-white"></i>
		</button>

		<div class="p-4">
			<h4 class="logo-text fw-bold mb-0">hpPhimmoi.net</h4>
			<p class="text-muted small hide-on-collapse">Dashboard</p>
		</div>

		<div class="nav flex-column">
			{% for item in menu %}
				<a href="{{ base_url ~ item.url }}" class="sidebar-link text-decoration-none p-3 {% if current_url == item.url %}active{% endif %}">
					<i class="fas fa-{{ item.icon }} me-3"></i>
					<span class="hide-on-collapse">{{ item.label }}</span>
				</a>
			{% endfor %}

		</div>
		<a href="/"
			class="sidebar-link text-decoration-none p-3">
			<i class="fa-solid fa-magnifying-glass"></i>
			<span class="hide-on-collapse">Xem Web</span>
		</a>
		<div class="profile-section mt-auto p-4">
			<div class="d-flex align-items-center">
				<img src="https://randomuser.me/api/portraits/women/70.jpg" style="height:60px" class="rounded-circle" alt="Profile">
				<div class="ms-3 profile-info">
					<h6 class="text-white mb-0">hau.ruan</h6>
					<small class="text-white">Admin</small>
				</div>
			</div>
		</div>
	</nav>
</div>
